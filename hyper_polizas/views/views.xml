<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hyper_polizas.slip_list">
      <field name="name">HyperPolizas Slip List</field>
      <field name="model">slip</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hyper_polizas.slip_action_window">
      <field name="name">HyperPolizas Slip Window</field>
      <field name="res_model">slip</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hyper_polizas.slip_action_server">
      <field name="name">HyperPolizas Slip server</field>
      <field name="model_id" ref="model_slip"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="HyperPolizas" id="hyper_polizas.menu_root" sequence="10" web_icon="hyper_polizas,static/src/img/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="hyper_polizas.menu_1" parent="hyper_polizas.menu_root"/>
    <menuitem name="Menu 2" id="hyper_polizas.menu_2" parent="hyper_polizas.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hyper_polizas.menu_1_list" parent="hyper_polizas.menu_1" action="hyper_polizas.slip_action_window"/>
    <menuitem name="Server to list" id="hyper_polizas" parent="hyper_polizas.menu_2" action="hyper_polizas.slip_action_server"/>

  </data>
</odoo>